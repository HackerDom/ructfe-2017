<?xml version="1.0" encoding="utf-8"?>
<configuration>
	<configSections>
		<section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
	</configSections>
	<startup>
		<supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.6.1" />
	</startup>
	<runtime>
		<gcServer enabled="true" />
		<assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
			<dependentAssembly>
				<assemblyIdentity name="Newtonsoft.Json" publicKeyToken="30ad4fe6b2a6aeed" culture="neutral" />
				<bindingRedirect oldVersion="0.0.0.0-10.0.0.0" newVersion="10.0.0.0" />
			</dependentAssembly>
		</assemblyBinding>
	</runtime>

	<log4net debug="false">
		<root>
			<level value="INFO" />
			<appender-ref ref="appender" />
		</root>
		<appender name="appender" type="log4net.Appender.RollingFileAppender">
			<staticLogFileName value="false" />
			<file value="logs/BlackMarket" />
			<appendToFile value="true" />
			<rollingStyle value="Date" />
			<datePattern value="_yyyy-MM-dd" />
			<layout type="log4net.Layout.PatternLayout">
				<header value="&#xd;&#xa;[Start of logging]&#xd;&#xa;"/>
				<footer value="[End of logging]&#xd;&#xa;&#xd;&#xa;"/>
				<conversionPattern value="%date{dd.MM.yyyy HH:mm:ss.fff} %-5level %4thread %message %exception %newline"/>
				<ignoresException value="false"/>
			</layout>
		</appender>
	</log4net>

	<appSettings>
		<add key="parityRpcUrl" value="http://127.0.0.1:8547" />
	</appSettings>
</configuration>
